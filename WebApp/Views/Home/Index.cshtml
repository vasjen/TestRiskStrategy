@model List<Company>
@{
    ViewData["Title"] = "Companies table";
}

 <div class="container-fluid py-4">
      <div class="row">
        <div class="col-12">
          <div class="card my-4">
            <div class="card-body px-0 pb-2">
              <div class="table-responsive p-0">
                <table class="table align-items-center mb-0">
                  <thead>
                    <tr>
                      <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">
                        <input class="form-control " id="inputColumn1" type="text" placeholder="Company name">
                      </th>
                      <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">
                         <input class="form-control " id="inputColumn2" type="text" placeholder="City">
                      </th>
                      <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">
                         <input class="form-control " id="inputColumn3" type="text" placeholder="State">
                      </th>
                      <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">
                         <input class="form-control " id="inputColumn14" type="text" placeholder="Phone">
                      </th>
                    </tr>
                  </thead>
                  <tbody id="myTable">
                    @foreach (var item in Model)
                    {
                    <tr>
                       <td>
                        <div class="d-flex px-2 py-1">
                          <div class="d-flex flex-column justify-content-center">
                            <a asp-action="Detail" asp-route-id ="@item.Id" class="text-secondary font-weight-bold text-xs" data-toggle="tooltip" data-original-title="Company detail">
                              <h6 class="mb-0 text-sm">@item.Name</h6>
                            </a>
                          </div>
                        </div>
                      </td>
                      <td>
                        <p class="text-xs font-weight-bold mb-0">@item.City</p>
                      </td>
                      <td class="align-middle text-center text-sm">
                        <p class="text-xs font-weight-bold mb-0">@item.State</p>
                      </td>
                      <td class="align-middle text-center">
                        <span class="text-secondary text-xs font-weight-bold">@item.Phone</span>
                      </td>
                    </tr>
                    }
                     
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
 </div>



</script>
 <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
  <script>
  $(document).ready(function() {
    $("#inputColumn1, #inputColumn2, #inputColumn3, #inputColumn4").on("keyup", function() {
      var columnIndex = $(this).index() + 1; 
      var value = $(this).val().toLowerCase();
      $("#myTable tr").filter(function() {
        $(this).toggle($(this).find("td:nth-child(" + columnIndex + ")").text().toLowerCase().indexOf(value) > -1)
      });
    });
  });
</script>